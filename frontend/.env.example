# Frontend Environment Variables
# Copy this file to .env.local for local overrides

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# 
# IMPORTANT: Must use VITE_ prefix for client-side variables!
# Variables without VITE_ prefix are NOT exposed to the browser.

# Local development (default)
VITE_API_URL=http://localhost:8000

# Production (set in .env.production or via CI/CD)
# VITE_API_URL=https://your-app-api.azurewebsites.net

# =============================================================================
# USAGE IN CODE
# =============================================================================
#
# TypeScript:
#   const API_URL = import.meta.env.VITE_API_URL || 'http://localhost:8000';
#
# The || fallback ensures local dev works even without .env file.

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
#
# In GitHub Actions, set VITE_API_URL as a repository variable:
#   gh variable set VITE_API_URL --body "https://your-app-api.azurewebsites.net"
#
# The workflow passes it to the build:
#   env:
#     VITE_API_URL: ${{ vars.VITE_API_URL }}
